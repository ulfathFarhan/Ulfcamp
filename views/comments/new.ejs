<%- include("../partials/header") %>
	
<div class="container">
	<h1 style="text-align:center;">Add a new Comment to <%= campground.name%></h1>
	<div class="row">
		
		<div style="width :30%;margin:50px auto;">
			<form method="POST" action="/campgrounds/<%=campground._id%>/comments">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" placeholder="text">
				</div>
			
			
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-inline" style="border-radius: 8px;">Submit</button>
				</div>
			</form>
			<a href="/campgrounds">Go back</a>
		</div>

	
</div>
	
</div>

<%- include("../partials/footer") %>