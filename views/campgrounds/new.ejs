<%- include("../partials/header") %>
	

	<h1 style="text-align:center;">Here You can add new camping places</h1>
	<div class="row">
		
		<div style="width :30%;margin:50px auto;">
			<form method="POST" action="/campgrounds">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="Camps name">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="price" placeholder="price"  min="10" step="1">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="Camps image">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="description" placeholder="description">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-inline" style="border-radius: 8px;">Submit</button>
				</div>
			</form>
			<a href="/campgrounds">Go back</a>
		</div>

	
</div>
	

<%- include("../partials/footer") %>